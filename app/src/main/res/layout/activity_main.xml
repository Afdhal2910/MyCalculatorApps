<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.example.amoi.mycalculatorapps.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CALCULATOR"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/number_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:paddingRight="16sp"
        android:paddingLeft="16sp"
        android:paddingTop="10sp"
        android:paddingBottom="10sp"
        android:textColor="@color/white"
        android:background="@drawable/bg_button_square_transparent"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />

    <TextView
        android:id="@+id/result_tv"
        android:layout_below="@id/number_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:paddingRight="16sp"
        android:paddingLeft="16sp"
        android:paddingTop="10sp"
        android:paddingBottom="10sp"
        android:textColor="@color/white"
        android:background="@drawable/bg_button_square_transparent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />

    <Button
        android:id="@+id/seven_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="5dp"
        android:text="7"
        android:textSize="25dp"
        android:background="@drawable/bg_button_round_white"
        />

    <Button
        android:id="@+id/eight_btn"
        android:layout_toRightOf="@id/seven_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="5dp"
        android:text="8"
        android:textSize="25dp"
        android:background="@drawable/bg_button_round_white"
        />

    <Button
        android:id="@+id/nine_btn"
        android:layout_toRightOf="@id/eight_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="5dp"
        android:text="9"
        android:textSize="25dp"
        android:background="@drawable/bg_button_round_white"
        />

    <Button
        android:id="@+id/divide_btn"
        android:layout_toRightOf="@id/nine_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="5dp"
        android:text="/"
        android:textSize="25dp"
        android:background="@drawable/bg_button_round_white"
        />

    <Button
        android:id="@+id/four_btn"
        android:layout_below="@id/seven_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:text="4"
        android:textSize="25dp"
        android:background="@drawable/bg_button_round_white"
        />

    <Button
        android:id="@+id/five_btn"
        android:layout_toRightOf="@id/four_btn"
        android:layout_below="@id/eight_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:text="5"
        android:textSize="25dp"
        android:background="@drawable/bg_button_round_white"
        />

    <Button
        android:id="@+id/six_btn"
        android:layout_toRightOf="@id/five_btn"
        android:layout_below="@id/nine_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:text="6"
        android:textSize="25dp"
        android:background="@drawable/bg_button_round_white"
        />

    <Button
        android:id="@+id/multiply_btn"
        android:layout_toRightOf="@id/six_btn"
        android:layout_below="@id/divide_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:text="x"
        android:textSize="25dp"
        android:background="@drawable/bg_button_round_white"
        />

    <Button
        android:id="@+id/one_btn"
        android:layout_below="@id/four_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:text="1"
        android:textSize="25dp"
        android:background="@drawable/bg_button_round_white"
        />

    <Button
        android:id="@+id/two_btn"
        android:layout_toRightOf="@id/one_btn"
        android:layout_below="@id/five_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:text="2"
        android:textSize="25dp"
        android:background="@drawable/bg_button_round_white"
        />

    <Button
        android:id="@+id/three_btn"
        android:layout_toRightOf="@id/two_btn"
        android:layout_below="@id/six_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:text="3"
        android:textSize="25dp"
        android:background="@drawable/bg_button_round_white"
        />

    <Button
        android:id="@+id/add_btn"
        android:layout_toRightOf="@id/six_btn"
        android:layout_below="@id/multiply_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:text="+"
        android:textSize="25dp"
        android:background="@drawable/bg_button_round_white"
        />

    <Button
        android:id="@+id/clear_btn"
        android:layout_below="@id/one_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:text="C"
        android:textSize="25dp"
        android:background="@drawable/bg_button_round_white"
        />

    <Button
        android:id="@+id/zero_btn"
        android:layout_toRightOf="@id/clear_btn"
        android:layout_below="@id/two_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:text="0"
        android:textSize="25dp"
        android:background="@drawable/bg_button_round_white"
        />

    <Button
        android:id="@+id/equal_btn"
        android:layout_toRightOf="@id/zero_btn"
        android:layout_below="@id/three_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:text="="
        android:textSize="25dp"
        android:background="@drawable/bg_button_round_white"
        />

    <Button
        android:id="@+id/minus_btn"
        android:layout_toRightOf="@id/equal_btn"
        android:layout_below="@id/add_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:text="-"
        android:textSize="25dp"
        android:background="@drawable/bg_button_round_white"
        />


</RelativeLayout>
